    /* â”€â”€â”€ LEAD FORM SUBMIT â”€â”€â”€ */
    function submitLead(e){
        e.preventDefault();
        const ar=document.body.classList.contains('ar');
        const name=document.getElementById('lName').value.trim();
        const email=document.getElementById('lEmail').value.trim();
        const phone=document.getElementById('lPhone').value.trim();
        const tg=document.getElementById('lTelegram').value.trim();
        const pkg=document.getElementById('lPackage').value;
        const country=document.getElementById('lCountry').value.trim();
        const pref=document.querySelector('input[name="contactPref"]:checked')?.value||'whatsapp';
        const time=document.querySelector('input[name="bestTime"]:checked')?.value||'afternoon';
        const notes=document.getElementById('lNotes').value.trim();
        const couponInput=document.getElementById('lCoupon').value.toUpperCase().trim();
        const couponObj=coupons.find(c=>c.code===couponInput&&c.active);
        const mkt=couponObj?couponObj.marketer:'Direct';
        const finalCoupon=couponObj?couponInput:'None';
        const discAmt=couponObj?couponObj.discount:0;
        const basePrice=pkg==='not_sure'?0:(prices[pkg]||0);
        const finalPrice=basePrice>0?(basePrice*(1-discAmt/100)).toFixed(2):'TBD';
        const id='LEAD'+Date.now();

        const lead={id,date:new Date().toISOString(),name,email,phone,telegram:tg,package:pkg,
            country,contactPref:pref,bestTime:time,notes,couponCode:finalCoupon,
            marketer:mkt,discount:discAmt,estimatedPrice:finalPrice,status:'new'};

        const leads=JSON.parse(localStorage.getItem('goldex_leads')||'[]');
        leads.push(lead);
        localStorage.setItem('goldex_leads',JSON.stringify(leads));

        // Hide form, show success
        document.getElementById('leadForm').style.display='none';
        const successBox=document.getElementById('successBox');
        successBox.style.display='block';
        document.getElementById('leadIdDisplay').textContent=`${ar?'Ø±Ù‚Ù… Ø§Ù„Ø·Ù„Ø¨':'Request ID'}: ${id}`;

