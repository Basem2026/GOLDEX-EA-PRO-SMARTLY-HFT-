    /* â”€â”€â”€ LANG â”€â”€â”€ */
    function toggleLang(){
        const b=document.body, isAr=b.classList.contains('ar');
        b.classList.toggle('ar',!isAr); b.classList.toggle('en',isAr);
        b.dir=isAr?'ltr':'rtl';
    }

    /* â”€â”€â”€ DATA â”€â”€â”€ */
    const prices={lifetime:499,monthly:79};
    let disc=0, couponUsed='';
    const defCoupons=[
        {code:'BASEM10',   marketer:'Basem TP',       discount:10, active:true},
        {code:'AHMED20',   marketer:'Ahmed Ali',      discount:20, active:true},
        {code:'MOHAMED15', marketer:'Mohamed Hassan', discount:15, active:true}
    ];
    let coupons=JSON.parse(localStorage.getItem('goldex_coupons')||'null')||defCoupons;
    if(!localStorage.getItem('goldex_coupons')) localStorage.setItem('goldex_coupons',JSON.stringify(coupons));

    /* â”€â”€â”€ COUPON (pricing cards) â”€â”€â”€ */
    function applyCoupon(){
        const code=document.getElementById('couponCode').value.toUpperCase().trim();
        const el=document.getElementById('cMsg');
        const ar=document.body.classList.contains('ar');
        if(!code){setMsg(el,ar?'âŒ Ø£Ø¯Ø®Ù„ Ø§Ù„ÙƒÙˆØ¯':'âŒ Enter a code',false);return;}
        const f=coupons.find(c=>c.code===code&&c.active);
        if(f){
            disc=f.discount; couponUsed=f.code;
            document.getElementById('lifetimeFinal').textContent=Math.round(prices.lifetime*(1-disc/100));
            document.getElementById('monthlyFinal').textContent=Math.round(prices.monthly*(1-disc/100));
            document.getElementById('lCoupon').value=f.code;
            setMsg(el,ar?`âœ… Ø®ØµÙ… ${f.discount}% Ù…Ø·Ø¨ÙÙ‘Ù‚`:`âœ… ${f.discount}% discount applied!`,true);
        } else {
            setMsg(el,ar?'âŒ ÙƒÙˆØ¯ ØºÙŠØ± ØµØ§Ù„Ø­':'âŒ Invalid code',false);
        }
    }

